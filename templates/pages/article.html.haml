%article.article
  %header
    %h1= title
    %span.date= date
  - if image_src
    %figure
      %img.thumbnail.alignleft{:alt => "Post thumbnail", :src => image_src || '/img/missing_thumb.png'}/
  %section.content
    = body
  %section.comments
    - if @config[:disqus]
      #disqus_thread
      %script{:src => "http://disqus.com/forums/#{@config[:disqus]}/embed.js", :type => "text/javascript"}       %noscript
        %a{:href => "http://#{@config[:disqus]}.disqus.com/?url=ref"} View the discussion thread.
      %a.dsq-brlink{:href => "http://disqus.com"}
        blog comments powered by
        %span.logo-disqus Disqus

